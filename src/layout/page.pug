doctype html
html(lang='ru')
    head
        block head
            title #{ title }
            meta(name='viewport', content='width=device-width, initial-scale=1.0')
            meta(charset='UTF-8')

            link(href=require('styles/styles.scss'), rel='stylesheet')
    body
        include header/header

        .main-wrapper
            main.main
                block main

            include footer/footer

        include ui/popups/video-review/video-review
        include ui/popups/text-review/text-review
        include ui/popups/send-review/send-review
        include ui/popups/filter-popup/filter-popup
        include ui/popups/cart/cart

        block scripts
            script(src=require('scripts/main.ts'), type='module')
            // Желательно чтобы swiper.ts был с атрибутом type="module" для ускорения загрузки
            // Для main.ts это необязательно
            script(src=require('scripts/swiper.ts'), type='module')
