doctype html
html(lang='ru')
    head
        block head
            title #{ title }
            meta(name='viewport', content='width=device-width, initial-scale=1.0')
            meta(charset='UTF-8')

            link(href=require('styles/styles.scss'), rel='stylesheet')
    body
        include header/header

        .main-wrapper
            main.main
                block main
                block popups

            include footer/footer

        include ui/popups/call-popup/call-popup
        include ui/popups/thanks/thanks
        include ui/popups/cart/cart
        include ui/popups/authorization/authorization

        block scripts
            script(src=require('scripts/main.ts'), type='module')
            // Желательно чтобы swiper.ts был с атрибутом type="module" для ускорения загрузки
            // Для main.ts это необязательно
            script(src=require('scripts/swiper.ts'), type='module')
