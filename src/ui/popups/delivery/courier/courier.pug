include layout/utils
include features/popup/popup

+popup('courier', 'courier')
    .courier__title Адрес доставки
    .courier__location Казань, респ. татарстан
    .courier-address
        .input
            .input__placeholder Улица и дом*
            input(type='text', name='street')
            .courier-address__list-block
                .courier-address__list-wrapper
                    ul.courier-address__list
        .input
            .input__placeholder Квартира/Офис*
            input(type='text', name='flat')
        .input
            .input__placeholder Домофон
            input(type='text', name='intercom')
        .input
            .input__placeholder Подъезд
            input(type='text', name='entrance')
        .input
            .input__placeholder Подъезд
            input(type='text', name='floor')
        .input
            .input__placeholder Комментарий к заказу
            input(type='text', name='comment')
    button.courier__button.button.button--dark(type='button') сохранить
