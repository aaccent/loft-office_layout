include layout/utils

mixin range-slider(props)
    -
        props = Object.assign({
            name: '',
        }, props || {})

    .range-slider(data-min='10000', data-max='500000')
        .range-slider__title= props.name
        .range-slider__inputs-wrapper
            // Аттрибут name можно менять, скрипты опираются на классы.
            // В value вмешиваться нельзя, только в data-num при инициализации
            +wrapBreak: input.range-slider__input.range-slider__input--from(name='range-from', value='', data-num='10000', type='text', data-mask='от %d')
            +wrapBreak: input.range-slider__input.range-slider__input--to(name='range-to', value='', data-num='250000', type='text', data-mask='до %d')
        .range-slider__track
            .range-slider__thumb.range-slider__thumb--from
            .range-slider__line
            .range-slider__thumb.range-slider__thumb--to
